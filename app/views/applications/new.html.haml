%h2 Create an Application

= semantic_form_for @app do |f|
  = f.inputs :name => "Basic" do
    = f.input :company
    = f.input :location
    = f.input :url
    = f.input :applied_on, :as => :string, :input_html => { :value => Date.today }
    = f.input :status, :as => :select, :collection => Application.statuses

  = f.submit "Save"
