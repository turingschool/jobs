<div id="create_application_btn">
  <%= button_to "Create a New Application", new_application_path, :id => "new_application", class: "btn btn-default", :method => :get %>
</div>

<div id="bookmarklet">
  <% if Rails.env.development? %>
    <a class="btn btn-default", style="padding-bottom: 3px, margin-top: 10px", href="javascript:window.open('http://localhost:3000'+'/applications/new?url='
    +encodeURIComponent(location.href)+'&bookmarklet=true', 'windowName', 'width=600,height=500,resizable,scrollbars=yes,status=1');">
    Drag to Your Favorites Bar to Add Applications From Any Page</a></li>
  <%else%>
    <a class="btn btn-default", style="padding-bottom: 3px, margin-top: 10px", href="javascript:window.open('https://jobs-turing.herokuapp.com'+'/applications/new?url='
    +encodeURIComponent(location.href)+'&bookmarklet=true', 'windowName', 'width=600,height=500,resizable,scrollbars=yes,status=1');">
    Drag to Your Favorites Bar to Add Applications From Any Page</a></li>
  <% end %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render :partial => "partials/to_apply_applications" %>
    </div>
    <div class="col-md-3">
      <%= render :partial => "partials/in_progress_applications" %>
    </div>
    <div class="col-md-3">
      <%= render :partial => "partials/applied_applications" %>
    </div>
    <div class="col-md-3">
      <%= render :partial => "partials/closed_applications" %>
    </div>
  </div>
</div>
